                        li.block_footer__li
                            a(href="#", class="block_footer__link") Warranty
                        li.block_footer__li
                            a(href="#", class="block_footer__link") Contact
                div(class="block_footer__block block_footer__item4")
                    h4.block_footer__h4 Account
                    ul.block_footer__ul
                        li.block_footer__li
                            a(href="#", class="block_footer__link") Login
                        li.block_footer__li
                            a(href="#", class="block_footer__link") Creat Account
                        li.block_footer__li
                            a(href="#", class="block_footer__link") Be Pro Member
                div(class="block_footer__block block_footer__item5")
                    ul.block_footer__ul
                        li.block_footer__li
                            a(href="#", class="block_footer__link2") Privacy Policy
                        li.block_footer__li
                            a(href="#", class="block_footer__link2") Refund Policy
                div(class="block_footer__block block_footer__item6")
                    ul.block_footer__ul
                        li.block_footer__li
                            a(href="#", class="block_footer__link2") Instagram
